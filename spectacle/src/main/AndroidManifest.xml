<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abhi.spectacle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".SpectacleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConstraintPlayActivity" />
        <activity
            android:name=".SharedElementTransitionParentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SharedElementTransitionChildActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".staggergrid.StaggeredGridActivity"
            android:label="@string/title_activity_staggered_grid"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".epoxy.EpoxyActivity" />
        <activity
            android:name=".epoxy.bottom.BottomSheetEpoxyActivity"
            android:label="@string/title_activity_bottom_sheet_epoxy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".epoxy.bottom.SlidingActivity"
            android:label="@string/title_activity_sliding"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".swipetodismiss.SwipeToDismissActivity"
            android:label="@string/title_activity_swipe_to_dismiss"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".swipetodismiss.ScrollingSwipeToDismissActivity"
            android:label="@string/title_activity_scrolling_swipe_to_dismiss"
            android:theme="@style/DragDismissTheme" />
        <activity
            android:name=".swipetodismiss.EmptySwipeToDismissActivity"
            android:theme="@style/DragDismissTheme" />
        <activity
            android:name=".swipetodismiss.MySwipeScrollingActivity"
            android:label="@string/title_activity_my_swipe_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".swipetodismiss.SwipeBackActivity"
            android:label="@string/title_activity_swipe_back"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".scrollingdetail.ScrollingDetailActivity"
            android:label="@string/title_activity_scrolling_detail"
            android:theme="@style/AppTheme.NoActionBar.Transparent" />
        <activity
            android:name=".scrollingdetail.BasicScrollingDetailActivity"
            android:label="@string/title_activity_basic_scrolling_detail"
            android:theme="@style/AppThemeTransparent" />
        <activity
            android:name=".scrollingdetail.EmptyScrollingDetailActivity"
            android:theme="@style/AppThemeTransparent" />
    </application>

</manifest>